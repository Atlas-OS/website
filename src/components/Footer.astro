---
import Logomark from '../../public/logomark.svg'
import ExternalLink from './ExternalLink.astro'
import { Icon } from 'astro-icon/components'

import { Picture } from 'astro:assets'

interface Props {
    links: {
        documentation: string
        forum: string
        discord: string
        github: string
        faq: string
        twitter: string
        trustpilot: string
        donate: string
    }
}

const { links } = Astro.props
---

<footer class="footer-wrapper">
    <div class="footer">
        <div class="left-section">
            <a class="logomark" href="/">
                <Picture src={Logomark} alt="Atlas logomark" loading="lazy" />
            </a>
            <p>Atlas is designed for gamers, with improved in-game framerates and lowered latency.</p>
            <div class="social-icons">
                <a href={links.twitter} aria-label="Follow us on X">
                    <Icon name="x" class="icons" size={24} />
                </a>
                <a href={links.discord} aria-label="Join our Discord community">
                    <Icon name="discord" class="icons" size={24} />
                </a>
                <a href={links.github} aria-label="Visit our GitHub repository">
                    <Icon name="github" class="icons" size={24} />
                </a>
                <a href={links.donate} aria-label="Visit our Ko-fi page">
                    <Icon name="kofi" class="icons" size={24} />
                </a>
                <a href={links.trustpilot} aria-label="Visit our TrustPilot page">
                    <Icon name="trustpilot" class="icons" size={24} />
                </a>
            </div>
            <a class="license" href="https://creativecommons.org/licenses/by-nc-nd/4.0/" target="_blank" rel="license noopener noreferrer">Website under CC BY-NC-ND 4.0</a>
        </div>
        <div class="links">
            <div class="column">
                <span>Sitemap</span>
                <a href="/">Home</a>
                <ExternalLink href={links.forum} showUnderline={false} showIcon={false} ariaLabel="Open GitHub Discussions" children="Discussions" />
                <ExternalLink href={links.documentation} showUnderline={false} showIcon={false} ariaLabel="Open documentation" children="Documentation" />
                <ExternalLink href={links.faq} showUnderline={false} showIcon={false} ariaLabel="Open documentation" children="FAQ" />
            </div>
            <div class="column">
                <span>Community</span>
                <ExternalLink href={links.github} showUnderline={false} showIcon={false} ariaLabel="Open GitHub" children="GitHub" />
                <ExternalLink href={links.discord} showUnderline={false} showIcon={false} ariaLabel="Open Discord" children="Discord" />
                <ExternalLink href={links.twitter} showUnderline={false} showIcon={false} ariaLabel="Open X / Twitter" children="X / Twitter" />
                <ExternalLink href={links.trustpilot} showUnderline={false} showIcon={false} ariaLabel="Open Trustpilot" children="Trustpilot" />
            </div>
            <div class="column">
                <span>Donations</span>
                <ExternalLink href={links.donate} showIcon={false} ariaLabel="Open Ko-fi" children="Ko-fi" />
            </div>
        </div>
    </div>
</footer>

<style>
    .footer-wrapper {
        padding: 70px 0px;
        background-color: hsl(225, 62%, 12%);
        border-top: 1px solid hsla(225, 71%, 7%, 0.3);

        .footer {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0px 20px;
            display: flex;
            justify-content: space-between;

            .left-section {
                display: flex;
                flex-direction: column;
                justify-content: space-between;
                gap: 30px;

                .logomark {
                    width: 200px;
                    height: 44px;

                    img {
                        width: 200px;
                        height: 44px;
                    }
                }

                p {
                    margin-top: -10px;
                    max-width: 325px;
                }

                .social-icons {
                    display: flex;
                    gap: 20px;

                    a {
                        display: flex;
                        align-items: center;
                        justify-content: center;
                    }

                    .icons {
                        fill: hsla(205, 100%, 98%, 0.8);
                        transition: all 0.1s ease-in-out;

                        &:hover {
                            fill: hsl(300, 100%, 99%);
                            filter: brightness(1.4);
                        }
                    }
                }

                .license {
                    font-weight: 400;
                    font-size: 14px;
                    color: hsla(205, 100%, 98%, 0.6);
                }
            }

            .links {
                display: flex;
                gap: 150px;

                span {
                    font-weight: 500;
                    font-size: 18px;
                }

                a {
                    color: hsla(205, 100%, 98%, 0.8);
                    font-weight: 400;
                    transition: color 0.1s ease-in-out;

                    &:hover {
                        color: hsl(300, 100%, 99%);
                    }
                }

                .column {
                    display: flex;
                    flex-direction: column;
                    gap: 20px;
                }
            }
        }
    }

    @media (max-width: 983px) {
        .footer {
            flex-direction: column;
            align-items: center;
            text-align: center;
            gap: 80px;

            .left-section {
                align-items: center;
                gap: 40px;
            }
        }
    }

    @media (max-width: 983px) and (min-width: 550px) {
        .footer {
            .links {
                flex-wrap: wrap;
            }
        }
    }

    @media (max-width: 675px) {
        .footer-wrapper .footer .links {
            flex-direction: column;
            gap: 50px;
        }
    }
</style>

---
import { Icon } from 'astro-icon/components';

interface Props {
  name: string;
  size?: 'sm' | 'md';
  color?: string;
  class?: string;
}

const { name, size = 'sm', color, class: className = '' } = Astro.props;

const sizeClasses = {
  sm: 'h-4 w-4',
  md: 'h-5 w-5',
};

const colorClass = color ? `text-${color}` : '';
const classes = `inline ${sizeClasses[size]} mx-1 ${colorClass} ${className}`.trim();
---

<Icon name={name} class={classes} />

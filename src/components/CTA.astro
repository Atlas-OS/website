---
import ExternalLink from './ExternalLink.astro'

interface Props {
    links: {
        github: string
        discord: string
    }
}

const { links } = Astro.props
---

<div class="footer-radial">
    <div class="container main">
        <div class="community-section">
            <h3>Join our community of 45,000+</h3>
            <p>Join our community of passionate tech enthusiasts to connect with like-minded individuals and seek advice from experts.</p>
            <div class="buttons">
                <ExternalLink className="button primary" href={links.discord} showUnderline={false} aria-label="Open Discord community" children="Join our Discord" />
                <ExternalLink className="button tertiary" href={links.github} showUnderline={false} aria-label="Open our GitHub page" children="Star us on GitHub" />
            </div>
        </div>
    </div>
</div>

<style>
    .footer-radial {
        background: radial-gradient(70.81% 168.07% at 49.97% 178.07%, rgba(0, 78, 150, 0.3) 0%, rgba(2, 24, 45, 0) 100%);
    }

    .community-section {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 40px;
        padding-top: 250px;
        padding-bottom: 190px;
        margin-top: 10px;

        p {
            text-align: center;
            margin-bottom: 10px;
            max-width: 630px;
            opacity: 0;
            transform: translateY(20px);
        }

        h3 {
            font-size: 48px;
            font-weight: 600;
            opacity: 0;
            transform: translateY(20px);
        }

        .buttons {
            display: flex;
            gap: 50px;
            opacity: 0;
            transform: translateY(20px);
        }

        @media (max-width: 810px) {
            h3 {
                text-align: center;
            }
        }

        @media (max-width: 500px) {
            padding-top: 150px;
            padding-bottom: 150px;
            gap: 30px;

            h3 {
                font-size: 36px;
            }

            p {
                max-width: 90%;
            }

            .buttons {
                flex-direction: column;
                gap: 20px;
            }
        }
    }
</style>

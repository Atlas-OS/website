---
import { Image } from 'astro:assets'

import PlayButton from '../assets/img/play-button.svg'
import LinusThumbnail from '../assets/img/linus-thumbnail.webp'

interface Props {
    links: {
        linusvideo: string
    }
}

const { links } = Astro.props
---

<div class="linus-section">
    <div class="heading">
        <h3><span class="darken">"</span>If you can run Windows with <span class="highlight">this kind of performance</span>... Jeepers Creepers.<span class="darken">"</span></h3>
        <p>â€” Linus Sebastian</p>
    </div>
    <a href={links.linusvideo} target="_blank" rel="noreferrer noopener" aria-label="Watch what Linus said about Atlas OS" class="linus-video">
        <div class="preview-wrapper">
            <div class="preview-image">
                <Image src={LinusThumbnail} alt="Linus Tech Tips video thumbnail" class="thumbnail" loading="lazy" />
                <div class="circle">
                    <Image loading="lazy" src={PlayButton} alt="Video play button" />
                </div>
            </div>
        </div>
    </a>
</div>

<style>
    .linus-section {
        margin-top: 300px;

        .heading {
            text-align: center;
            margin-bottom: 100px;
            word-break: keep-all;

            h3 {
                font-style: italic;
                font-size: 64px;
                opacity: 0;
                transform: translateY(30px);
            }

            p {
                font-size: 24px;
                margin-top: 40px;
                color: hsla(205, 100%, 100%, 45%);
                opacity: 0;
                transform: translateY(30px);
            }

            @media (max-width: 810px) {
                display: flex;
                align-items: center;
                text-align: center;
                flex-direction: column;
                gap: 10px;

                p {
                    max-width: 90%;
                }
            }
        }

        .preview-wrapper {
            position: relative;
        }

        .preview-image {
            position: relative;
            height: 546px;
            max-width: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto;
            border-radius: 14px 14px 0px 0px;
            transition: all 0.5s cubic-bezier(0.22, 1, 0.36, 1);
            overflow: hidden;

            .thumbnail {
                position: absolute;
                inset: 0;
                width: 100%;
                height: 100%;
                object-fit: cover;
                z-index: 0;
            }

            &::before {
                content: '';
                position: absolute;
                inset: 0;
                background: radial-gradient(circle at center, hsla(209, 100%, 42%, 0) 0%, hsla(209, 100%, 42%, 0) 50%, hsla(209, 100%, 12%, 0.4) 100%);
                opacity: 0;
                transition: opacity 0.5s cubic-bezier(0.22, 1, 0.36, 1);
                border-radius: 14px 14px 0px 0px;
                z-index: 1;
            }

            &::after {
                content: '';
                position: absolute;
                bottom: -10px;
                left: 0;
                right: 0;
                height: 150px;
                background: linear-gradient(180deg, transparent 0%, rgba(5, 12, 31, 0.9) 75%, rgb(5, 12, 31) 85%, rgb(5, 12, 31) 100%);
                z-index: 1;
            }
        }

        .circle {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            background-color: hsla(0, 0%, 0%, 0.5);
            backdrop-filter: blur(8px);
            border: 1px solid hsla(0, 0%, 100%, 0.1);
            font-size: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s cubic-bezier(0.22, 1, 0.36, 1);
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);

            img {
                width: 45px;
                height: 45px;
                margin-left: 8px;
                transition: all 0.3s cubic-bezier(0.22, 1, 0.36, 1);
                filter: brightness(1.2);
            }
        }

        @media (max-width: 500px) {
            margin-top: 150px;

            .preview-image {
                height: 250px;
            }

            .heading {
                h3 {
                    font-size: 36px;
                    max-width: 90%;
                }
            }
        }

        @media (max-width: 285px) {
            .heading {
                h3 {
                    font-size: 28px;
                }
            }
        }
    }

    .linus-video {
        display: block;

        &:hover {
            .preview-image {
                transform: scale(1.02);

                &::before {
                    opacity: 1;
                }
            }

            .circle {
                transform: scale(1.05);
                background-color: hsla(0, 0%, 0%, 0.6);
                box-shadow:
                    0 8px 30px rgba(0, 0, 0, 0.4),
                    0 0 0 1px hsla(0, 0%, 100%, 0.2);

                img {
                    transform: scale(1.1) translateX(2px);
                    filter: brightness(1.4);
                }
            }
        }
    }
</style>

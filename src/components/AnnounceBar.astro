---
import ExternalLink from './ExternalLink.astro'
---

<div class="announce-bar">
    <div class="announce-content">
        <div class="icon-wrapper">ðŸŽ‰</div>
        <span>
            Atlas v0.4.1 has been released! View our <ExternalLink href="https://github.com/Atlas-OS/Atlas/releases/tag/0.4.1" showIcon={false} className="announce-link" children="GitHub release" /> for more information.
        </span>
    </div>
</div>

<script>
    import { animateElement } from '../utils/animations'

    document.addEventListener('DOMContentLoaded', () => {
        animateElement({
            selector: '.announce-bar',
            keyframes: {
                opacity: [0, 1],
                y: [-20, 0]
            },
            options: {
                duration: 0.8,
                easing: 'ease-out'
            }
        })
    })
</script>

<style>
    .announce-bar {
        background: linear-gradient(90deg, rgba(37, 99, 235, 0.1) 0%, rgba(37, 99, 235, 0.05) 100%);
        border-bottom: 1px solid rgba(59, 130, 246, 0.2);
        padding: 12px 0;
        text-align: center;
        position: relative;
        width: 100%;
        z-index: 999;
        opacity: 0;
        backdrop-filter: blur(8px);
        will-change: transform, opacity;
    }

    .announce-content {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 12px;
        color: hsl(0, 0%, 98%);
        font-size: 15px;

        .announce-link {
            color: rgba(59, 130, 246, 0.8);
        }

        .icon-wrapper {
            display: flex;
            align-items: center;
            font-size: 18px;
            animation: bounce 2s infinite;
        }

        span {
            font-weight: 500;
        }
    }

    @keyframes bounce {
        0%,
        100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-3px);
        }
    }

    @media (max-width: 900px) {
        .announce-bar {
            margin-bottom: 10px;
        }

        .announce-content {
            font-size: 14px;
            padding: 0 16px;
        }
    }

    @media (max-width: 480px) {
        .announce-content {
            gap: 8px;
        }
    }
</style>

---
import { Icon } from 'astro-icon/components';

interface Props {
  href: string;
  icon: string;
  label: string;
  title: string;
  description: string;
  external?: boolean;
}

const { href, icon, label, title, description, external = false } = Astro.props;

const externalAttrs = external ? { target: '_blank', rel: 'noopener noreferrer' } : {};
---

<a
  href={href}
  {...externalAttrs}
  class="quick-link-card not-prose group quick-link-card-animated relative rounded-lg border border-white/10 bg-white/5 p-5 transition-opacity hover:opacity-80"
>
  <div class="mb-2 flex items-center gap-3 text-sm text-white/60">
    <div class="quick-link-icon-wrapper">
      <Icon name={icon} class="h-4 w-4" />
    </div>
    <span>{label}</span>
  </div>
  <h3 class="mb-2 text-lg font-semibold transition-opacity group-hover:opacity-80">{title}</h3>
  <p class="text-sm text-white/70">{description}</p>
</a>

<style is:global>
  .quick-link-card-animated {
    animation: quick-link-fade-in 0.4s ease-out;
    z-index: 1;
  }

  @keyframes quick-link-fade-in {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .quick-link-icon-wrapper {
    animation: quick-link-icon-fade-in 0.6s ease-out;
  }

  @keyframes quick-link-icon-fade-in {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }
</style>

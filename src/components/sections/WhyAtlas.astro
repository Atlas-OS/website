---
import SectionTitle from '@/components/sections/common/SectionTitle.astro';
import { Icon } from 'astro-icon/components';

const features = [
  {
    icon: 'tabler:spy-off',
    title: 'Enhanced privacy by design',
    description:
      'Reduces Windows telemetry & data collection by disabling services & implementing privacy-focused policies for minimal data sharing.',
  },
  {
    icon: 'tabler:gauge',
    title: 'Optimized performance',
    description:
      'Implements meaningful enhancements for responsiveness & low latency without sacrificing stability or compatibility.',
  },
  {
    icon: 'tabler:shield-check',
    title: 'Flexible security',
    description:
      'Customize security settings like Defender & SmartScreen. Balance protection and performance to your preference.',
  },
  {
    icon: 'tabler:feather',
    title: 'Streamlined usability',
    description: 'Removes bloatware & ads for a cleaner, faster interface configured for optimal user experience.',
  },
  {
    icon: 'tabler:refresh-alert',
    title: 'Stays up-to-date',
    description: 'Applies security patches and cumulative updates. Feature updates skipped to preserve optimizations.',
  },
  {
    icon: 'tabler:devices',
    title: 'For both desktops & laptops',
    description:
      'Configure power-saving features for up to 3 hours extra battery life (internally tested on a Zephyrus laptop).',
  },
  {
    icon: 'tabler:code',
    title: 'Open & transparent',
    description: 'Fully open-source using transparent, with many stargazers on GitHub. Audit and customize everything.',
  },
  {
    icon: 'tabler:scale',
    title: 'Legal & reversible',
    description: "Complies with Microsoft's terms (no ISO redistribution). Peace of mind when using AtlasOS.",
  },
];
---

<section class="relative mx-auto mb-32 max-w-7xl px-4">
  <div class="mb-16">
    <SectionTitle>Why AtlasOS?</SectionTitle>
    <h2 class="mb-6 text-4xl font-semibold tracking-tight text-white md:text-5xl">
      Why choose <span class="text-primary">AtlasOS</span>?
    </h2>
    <p class="max-w-2xl leading-relaxed text-white/70">
      A lightweight modification of Windows, designed for enthusiasts and anyone alike who desires a trusted, performant
      experience without sacrificing functionality.
    </p>
  </div>
  <div class="grid grid-cols-1 gap-0 md:grid-cols-2">
    {
      features.map((feature, index) => {
        const isFirstTwo = index < 2;
        const isLastTwo = index >= features.length - 2;
        const baseClasses =
          "relative pr-8 md:pr-16 md:odd:pr-16 md:odd:before:absolute md:odd:before:top-[20%] md:odd:before:right-0 md:odd:before:bottom-[20%] md:odd:before:w-px md:odd:before:bg-linear-to-b md:odd:before:from-transparent md:odd:before:via-white/10 md:odd:before:to-transparent md:odd:before:content-[''] md:even:pl-16";
        const paddingClass = isFirstTwo ? 'pb-10' : 'py-10';
        const afterClasses = isLastTwo
          ? ''
          : "after:absolute after:right-0 after:bottom-0 after:left-0 after:h-px after:bg-linear-to-r after:from-transparent after:via-white/10 after:to-transparent after:content-[''] md:last:after:hidden";

        return (
          <div class={`${baseClasses} ${paddingClass} ${afterClasses}`}>
            <div class="flex items-start">
              <div class="mt-0.5 mr-6 flex h-9 w-9 min-w-9 items-center justify-center rounded bg-white/5">
                <Icon name={feature.icon} class="h-5 w-5 text-white/80" />
              </div>
              <div>
                <h3 class="mb-3 text-xl font-semibold text-white">{feature.title}</h3>
                <p class="leading-relaxed text-white/70">{feature.description}</p>
              </div>
            </div>
          </div>
        );
      })
    }
  </div>
</section>
